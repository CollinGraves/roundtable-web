<p id="notice"><%= notice %></p>

<h1>Listing Roundtables</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Public</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roundtables.each do |roundtable| %>
      <tr>
        <td><%= roundtable.name %></td>
        <td><%= roundtable.public %></td>
        <td><%= link_to 'Show', roundtable %></td>
        <td><%= link_to 'Edit', edit_roundtable_path(roundtable) %></td>
        <td><%= link_to 'Destroy', roundtable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

